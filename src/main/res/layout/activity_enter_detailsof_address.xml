<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="5dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EnterDetailsofAddress">

    <EditText
        android:id="@+id/city"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint=" City"
        android:paddingLeft="5dp"
        app:layout_constraintTop_toTopOf="parent"/>

    <EditText
        android:id="@+id/e_address"
        android:hint="Address"
        android:paddingLeft="5dp"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/city"/>

    <EditText
        android:id="@+id/pincode"
        android:layout_width="190dp"
        android:layout_height="wrap_content"
        android:hint="Pincode"
        android:inputType="number"
        android:layout_marginTop="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/e_address"/>

    <Spinner
        android:id="@+id/spinner"
        android:layout_width="170dp"
        android:layout_marginTop="29dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/e_address"
        app:layout_constraintRight_toRightOf="parent"/>

    <EditText
        android:id="@+id/e_name"
        android:hint="Name"
        android:layout_marginTop="25dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/spinner"/>

    <EditText
        android:id="@+id/p_no"
        android:hint="Phone Number"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/e_name"/>

    <Button
        android:id="@+id/adddetails"
        android:background="@drawable/button"
        android:text="Add"
        android:textAllCaps="false"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/p_no"/>

</android.support.constraint.ConstraintLayout>